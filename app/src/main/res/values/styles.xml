<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/MyAppTheme.DrawerArrowStyle</item>
    </style>

    <style name="MyAppTheme.MainActivity" parent="MyAppTheme">
        <item name="android:background">@drawable/login_bg</item>
    </style>

    <style name="MyAppTheme.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/actionbar_text_color</item>
    </style>

    <style name="MyAppTheme.Toolbar" parent="MyAppTheme">
        <item name="android:textColorPrimary">@color/actionbar_text_color</item>
        <item name="android:textColorPrimaryInverse">@color/actionbar_text_color</item>
        <item name="actionMenuTextColor">@color/actionbar_text_color</item>
        <item name="android:textColorSecondary">@color/actionbar_text_color</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="MyActionBarTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowActionBarOverlay">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/MyActionBarTheme.TitleTextStyle</item>
    </style>

    <style name="MyActionBarTheme.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text_color</item>
    </style>

    <color name="colorPrimary">#26A69A</color>
    <color name="colorPrimaryDark">#009688</color>
    <color name="colorAccent">#2226BD</color>
    <color name="actionbar_text_color">#FAFAFA</color>
    <color name="navigationdrawer_color">#F5F5F5</color>
    <color name="navigationdrawer_text_color">#212121</color>
    <color name="navigationdrawer_divider_color">#EEEEEE</color>
    <color name="page_background">#E0E0E0</color>
    <color name="page_divider">#BDBDBD</color>
    <color name="page_card_color">#FAFAFA</color>
    <color name="default_text_color">#212121</color>
    <color name="button_color">#BDBDBD</color>
    <color name="backgroundColorPrimary">@color/colorPrimary</color>
    <color name="backgroundColorSecondary">#E0F2F1</color>
</resources>
