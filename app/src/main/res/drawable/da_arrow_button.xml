<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"
        android:drawable="@drawable/da_grey_pressed"/> //currently pressed turning the toggle off
    <item android:state_checked="true"
        android:drawable="@drawable/da_red_pressed"/> //not pressed default checked state
    <item android:state_checked="false"
        android:drawable="@drawable/da_grey"/>

</selector>